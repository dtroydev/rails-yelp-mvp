<%= render 'shared/navbar' %>
<div class="container show">
  <div class="row mt-5 justify-content-center">
    <%= render 'restaurants/restaurantcard', restaurant: @restaurant, review_link: false, back_link: true  %>
  </div>
  <div class="row justify-content-center">
    <h1>Add Review</h1>
  </div>
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'restaurants/reviewform', restaurant: @restaurant,
                         review: @review,
                         ratings: @ratings %>
    </div>
  </div>
  <div class="row mt-5 justify-content-center mb-3">
    <h2>Reviews</h2>
  </div>
  <div class="row justify-content-center">
    <%= render 'restaurants/reviews', reviews: @restaurant.reviews %>
  </div>
</div>